<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="17dip" />
            <stroke android:width="0.5dip" android:color="#03A9F4" />
            <gradient android:angle="-90" android:startColor="#fff" android:endColor="#00FFFFFF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="17dip" />
            <stroke android:width="0.5dip" android:color="#03A9F4" />
            <solid android:color="#2755FFE5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="17dip" />
            <stroke android:width="0.5dip" android:color="#03A9F4" />
            <gradient android:angle="-90" android:startColor="#FFF" android:endColor="#EEE4E4" />
        </shape>
    </item>
</selector>