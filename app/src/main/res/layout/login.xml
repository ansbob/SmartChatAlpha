<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:p="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/sky"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/enter"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".LoginActivity">
                <LinearLayout
                    android:id="@+id/useSocLayout"
                    android:layout_width="match_parent"
                    android:paddingTop="15dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/TV2"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="@string/useSocial"
                        android:textSize="19dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/socialLinks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/useSocLayout"
                    android:paddingTop="15dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/google"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:background="@drawable/selector"
                        android:onClick="onClick"
                        android:src="@drawable/google" />

                    <ImageView
                        android:id="@+id/vk"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:onClick="onClick"
                        android:background="@drawable/selector"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/vk"/>

                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:onClick="onClick"
                        android:background="@drawable/selector"
                        android:src="@drawable/facebook"
                        android:layout_marginLeft="1dp"/>

                    <ImageView
                        android:id="@+id/mail"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:onClick="onClick"
                        android:background="@drawable/selector"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/mail"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/formLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:layout_below="@+id/socialLinks">
                    <TextView
                        android:id="@+id/error"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="error!"
                        android:visibility="invisible"
                        android:textColor="@color/red"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:text="@string/choose"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/country"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:paddingBottom="3dp"
                        android:text="@string/kazakhstan"
                        android:paddingLeft="5dp"
                        android:background="@drawable/blue_bottom_line"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/countryError"
                        android:layout_width="250dp"
                        android:layout_height="16dp"
                        android:textSize="13dp"
                        android:gravity="right"
                        android:text="@string/require"
                        android:visibility="invisible"
                        android:textColor="@color/red"/>
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:text="@string/phoneN"
                        android:textSize="18dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+7"
                            android:textColor="@color/black"
                            android:layout_marginTop="1dp"
                            android:textSize="18dp"/>
                        <EditText
                            android:id="@+id/phone_login"
                            android:inputType="phone|number"
                            android:maxLength="12"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="15dp"
                            android:background="@drawable/gray_bottom_line"
                            android:textSize="18dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/phoneError"
                        android:layout_width="250dp"
                        android:layout_height="16dp"
                        android:textSize="13dp"
                        android:gravity="right"
                        android:text="@string/require"
                        android:visibility="invisible"
                        android:textColor="@color/red"/>
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:text="@string/enterPassword"
                        android:textSize="18dp"/>
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:inputType="textPassword"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/gray_bottom_line"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/passwordError"
                        android:layout_width="250dp"
                        android:layout_height="16dp"
                        android:textSize="13dp"
                        android:gravity="right"
                        android:visibility="invisible"
                        android:text="@string/require"
                        android:textColor="@color/red"/>
                    <TextView
                        android:id="@+id/forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="5dp"
                        android:background="@drawable/selector"
                        android:textSize="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="70dp"
                        android:text="@string/forgotpass"
                        />
                    <Button
                        android:id="@+id/enter"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:text="@string/enter2"
                        android:textColor="@color/white"
                        android:background="@drawable/button_design"/>

                    <TextView
                        android:id="@+id/registration"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector"
                        android:text="@string/registration"
                        android:gravity="center"
                        android:textSize="16dp"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>