<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/body2"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="350dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp" >


                <LinearLayout
                    android:id="@+id/body"
                    android:layout_width="350dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="@string/beginner"
                        android:layout_marginLeft="-7dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:paddingBottom="5dp"
                        android:textSize="20dp"
                        android:background="@drawable/blue_edit3"
                        android:textColor="@color/smartchat" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="310dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/ic_profile2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Имя"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="25dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack2"
                        />

                    <!--<EditText-->
                        <!--android:layout_width="320dp"-->
                        <!--android:layout_height="40dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:paddingStart="25dp"-->
                        <!--android:text="Анвар Шермухамедов"-->
                        <!--android:background="@drawable/design_edit_text"/>-->

                    <EditText
                        android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Анвар Шермухамедов"
                        android:background="@drawable/design_edit_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Фамилия"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="25dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack2"
                        />
                    <EditText
                        android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/design_edit_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Дата рождения"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="25dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack2"
                        />

                    <TextView
                        android:id="@+id/edit23"
                        android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:paddingTop="7dp"
                        android:textSize="18dp"
                        android:background="@drawable/design_edit_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="25dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack2"
                        />

                    <EditText
                        android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/design_edit_text"/>
                    <RelativeLayout
                        android:layout_width="310dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_compat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:textOff=""
                            android:textOn=""
                            android:layout_alignParentLeft="true"
                            android:theme="@style/MySwitch"
                            app:showText="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/switch_compat"
                            android:text="@string/sms"/>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_compat2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:textOff=""
                            android:layout_marginTop="7dp"
                            android:layout_below="@id/switch_compat"
                            android:textOn=""
                            android:layout_alignParentLeft="true"
                            android:theme="@style/MySwitch"
                            app:showText="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:layout_below="@+id/switch_compat"
                            android:layout_toRightOf="@+id/switch_compat2"
                            android:text="Email - уведомления"/>
                    </RelativeLayout>

                    <Button
                        android:layout_width="215dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:text="Сохранить"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="15dp"
                        android:enabled="false"
                        android:background="@drawable/button_desi_gn2"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="215dp"
                        android:layout_height="30dp"
                        android:text="Изменить пароль"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="15dp"
                        android:enabled="false"
                        android:background="@drawable/button_desi_gn2"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="215dp"
                        android:layout_height="30dp"
                        android:text="Отмена"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="15dp"
                        android:enabled="false"
                        android:background="@drawable/button_desi_gn2"
                        android:layout_gravity="center"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>